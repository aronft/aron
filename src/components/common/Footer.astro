---
import Logo from './Logo.astro'

type Props = {}

const {} = Astro.props
---

<footer
	class="relative flex flex-col gap-4 pb-6 pt-16 md:flex-row md:justify-between md:pb-14 md:pt-20"
>
	<div
		class="absolute left-0 right-0 top-0 min-w-full border-t-[3px] border-neutral-900 lg:-ml-36 lg:mr-[calc((100vw-100%)*-1/2)]"
	>
	</div>
	<Logo />
	<div class="flex flex-col md:items-center">
		<ul class="mb-3 flex gap-10 md:text-3xl md:leading-relaxed">
			<li>
				<a href="" class="text-strok bg-neutral-900 font-hand text-white">LinkedIn</a>
			</li>
			<li>
				<a href="" class="text-strok bg-neutral-900 font-hand text-white">Github</a>
			</li>
		</ul>
		<p class="md:text-center md:text-2xl">Copyright. Portfolio {new Date().getFullYear()}</p>
	</div>
</footer>

